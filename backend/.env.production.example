# Application
NODE_ENV=production
PORT=3000

# Database (PostgreSQL - Configure in Render/Railway)
DATABASE_URL="postgresql://user:password@host:5432/educaplayja?schema=public"

# JWT Authentication (IMPORTANT: Generate secure secrets in production!)
JWT_SECRET=your-super-secure-jwt-secret-here-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-here-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# Mercado Pago (Production credentials)
MP_ACCESS_TOKEN=your-production-mercadopago-access-token
MP_PUBLIC_KEY=your-production-mercadopago-public-key

# Cloudinary (Image hosting)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email (Gmail App Password or SMTP service)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="EducaplayJA <your-email@gmail.com>"

# URLs (Update with your production URLs)
FRONTEND_URL=https://your-app.vercel.app
BACKEND_URL=https://your-api.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Platform Configuration
PLATFORM_FEE_PERCENT=10
PLATFORM_NAME=EducaplayJA
PLATFORM_EMAIL=contato@educaplayja.com.br
PLATFORM_SUPPORT_EMAIL=suporte@educaplayja.com.br

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# File Upload
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,mp4,jpg,jpeg,png,gif,zip

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Google OAuth (Production credentials)
GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_CALLBACK_URL=https://your-api.onrender.com/api/v1/auth/google/callback
